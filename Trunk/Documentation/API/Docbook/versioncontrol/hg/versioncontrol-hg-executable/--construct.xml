      &type.object;
      <parameter>$hg</parameter>
     </term>
     <listitem>
      <para>is the root object</para>
     </listitem>
    </varlistentry>
   </variablelist>
   <variablelist>
    <varlistentry>
     <term>
      &type.string;
      <parameter>$path</parameter>
     </term>
